@model EntityLayer.Concrete.Admin
@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Admin Ekleme sayfası</h1>
<br />

@using (Html.BeginForm("AddAmin", "Authorization", FormMethod.Post))
{
    <div class="form-control">
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "from-control" })
        @Html.ValidationMessageFor(x => x.AdminUserName)
        <br /> <br />
        @Html.Label("Şifreyi Giriniz")
        @Html.TextBoxFor(x => x.AdminPassword, new { @class = "from-control" })
        @Html.ValidationMessageFor(x => x.AdminPassword)
        <br /> <br />
        @Html.Label("Rolü Seçiniz")
        @Html.TextBoxFor(x => x.AdminRole, new { @class = "from-control" })
        @Html.ValidationMessageFor(x => x.AdminRole)
        <br /> <br />

        <button class="btn btn-info">Kaydet</button>
    </div>

}
